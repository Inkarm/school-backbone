// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  TRAINER
  PARENT
}

model User {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String
  role     Role   @default(TRAINER)

  // Profile Data
  firstName String?
  lastName  String?
  email     String?
  phone     String?
  bio       String?
  color     String? // Hex color for calendar
  accessLevel Int     @default(1) // 1=Own, 2=All, 3=Custom

  // Relations
  groups           Group[]         @relation("GroupDefaultTrainer")
  scheduleEvents   ScheduleEvent[] @relation("EventTrainer")
  recurringSchedules RecurringSchedule[] @relation("RecurringTrainer")
  accessibleGroups Group[]         @relation("TrainerAccessibleGroups")
}

model Student {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  dateOfBirth DateTime?
  parentName  String?
  parentPhone String?
  parentEmail String?
  healthNotes String?
  notes       String?
  status      String    @default("ACTIVE") // ACTIVE, SUSPENDED, ARCHIVED
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt

  // Computed name for backward compatibility if needed, or just remove 'name' field
  // For now replacing 'name' with firstName/lastName structure

  // Relations
  groups     Group[]      @relation("StudentGroups")
  attendance Attendance[]
  payments   Payment[]
  invoices   Invoice[]
}

model Invoice {
  id        Int      @id @default(autoincrement())
  number    String   @unique
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])
  issueDate DateTime
  dueDate   DateTime
  amount    Float
  status    String   // DRAFT, ISSUED, PAID, CANCELLED
  items     Json     // Array of { description, quantity, price }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id             Int    @id @default(autoincrement())
  name           String
  defaultTrainerId Int?
  ratePerClass   Float  @default(0.0)
  monthlyFee     Float  @default(0.0)

  // Relations
  defaultTrainer  User?           @relation("GroupDefaultTrainer", fields: [defaultTrainerId], references: [id])
  students        Student[]       @relation("StudentGroups")
  scheduleEvents  ScheduleEvent[]
  recurringSchedules RecurringSchedule[]
  allowedTrainers User[]          @relation("TrainerAccessibleGroups")
}

model ScheduleEvent {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime String   // Format "HH:mm"
  endTime   String   // Format "HH:mm"
  roomId    Int?
  groupId   Int
  trainerId Int
  
  // New fields
  status      String   @default("SCHEDULED") // 'SCHEDULED', 'CANCELLED', 'COMPLETED'
  description String?
  seriesId    Int?

  // Relations
  group      Group        @relation(fields: [groupId], references: [id])
  trainer    User         @relation("EventTrainer", fields: [trainerId], references: [id])
  room       Room?        @relation(fields: [roomId], references: [id])
  series     RecurringSchedule? @relation(fields: [seriesId], references: [id])
  attendance Attendance[]
}

model RecurringSchedule {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  dayOfWeek Int      // 0=Sunday, 1=Monday, etc.
  startTime String
  endTime   String
  
  groupId   Int
  trainerId Int
  roomId    Int?
  
  description String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  group   Group   @relation(fields: [groupId], references: [id])
  trainer User    @relation("RecurringTrainer", fields: [trainerId], references: [id])
  room    Room?   @relation(fields: [roomId], references: [id])
  events  ScheduleEvent[]
}

model Room {
  id       Int             @id @default(autoincrement())
  name     String
  capacity Int
  events   ScheduleEvent[]
  recurringSchedules RecurringSchedule[]
}

model Attendance {
  id        Int           @id @default(autoincrement())
  eventId   Int
  studentId Int
  present   Boolean       @default(false) // true = present, false = absent
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relations
  event   ScheduleEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  student Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, eventId])
  @@index([eventId])
  @@index([studentId])
}

model Payment {
  id          Int      @id @default(autoincrement())
  studentId   Int
  amount      Float
  monthYear   String   // e.g. "2023-11"
  paymentDate DateTime @default(now())
  method      String   // 'cash', 'transfer'

  // Relations
  student Student @relation(fields: [studentId], references: [id])
}
